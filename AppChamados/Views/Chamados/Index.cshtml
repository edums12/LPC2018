@model IEnumerable<AppChamados.Models.Chamados>

@{
    ViewData["Title"] = "Chamados";
}

<main>
    <br>

    <h2>@ViewData["Title"]</h2>

    <br>

    <a href="./Chamados/Create" class="btn btn-success">Novo chamado</a>

    <br>
    <br>

    <table class="table table-striped table-bordered table-hover table-responsive">
        <caption>Lista de chamados</caption>
        <thead class="thead-light">
            <th class="text-center">Id</th>
            <th class="text-center">Número</th>
            <th class="text-center">Nome solicitante</th>
            <th class="text-center">Problema</th>
            <th class="text-center">Data da solução</th>
            <th class="text-center">Total de horas</th>
            <th class="text-center">Situações</th>
            <th class="text-center">Ações</th>
        </thead>

        <tbody>
            @foreach(var chamado in Model ){
            <tr>
                <td class="text-center">@chamado.id</td>
                <td class="text-center">@chamado.numero</td>
                <td class="text-center">@chamado.solicitante.nome</td>
                <td class="text-center">@chamado.problema</td>
                <td class="text-center">@chamado.dataSolucao</td>
                <td class="text-center">@chamado.totalHorasAtendimento horas</td>
                <td class="text-center">@chamado.situacao.descricao</td>
                <td class="text-center">
                    <a href="./Chamados/Delete/@chamado.id" class="text-danger"><i class="material-icons">delete</i></a>
                    <a href="./Chamados/Update/@chamado.id" class="text-info"><i class="material-icons">edit</i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</main>