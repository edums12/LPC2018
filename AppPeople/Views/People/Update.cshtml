@model AppPeople.Models.Person

@{
    ViewData["Title"] = "Editar cliente";
}

<br>

<br>

@{
    Person person = (Person) ViewData["Person"];
}

<h2>@ViewData["Title"] - @person.Name</h2>

<form action="./Update" method="POST">
    <input type="hidden" name="id" class="form-control" id="id" placeholder="Id da pessoa" value="@person.GetId">

    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="name" class="form-control" id="nome" placeholder="Nome da pessoa" value="@person.Name">
    </div>
    <div class="form-group">
        <label for="endereco">Endereço</label>
        <input type="text" name="address" class="form-control" id="endereco" placeholder="Endereço do cliente" value="@person.Address">
    </div>
    <button type="submit" class="btn btn-primary">Editar</button>
</form>